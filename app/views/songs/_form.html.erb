
<%= form_for @song do |f| %> <%= f.label :title %> <%= f.text_field :title %>
<p>
  <%= @song.errors.full_messages_for(:title).join(", ") if
        @song.errors.has_key?(:title) %>
</p>
<%= f.label :released %> <%= f.check_box :released %> 
<%= f.label :release_year %> 
<%= f.number_field :release_year %>
<p>
  <%= @song.errors.full_messages_for(:release_year).join(", ") if
        @song.errors.has_key?(:release_year) %>
</p>

<%= f.label :artist_name %> <%= f.text_field :artist_name %>
<p>
  <%= @song.errors.full_messages_for(:artist_name).join(", ") if
        @song.errors.has_key?(:artist_name) %>
</p>

<%= f.label :genre %> <%= f.text_field :genre %>
<p>
  <%= @song.errors.full_messages_for(:genre).join(", ") if
        @song.errors.has_key?(:genre) %>
</p>

<%= f.submit %> <% end %>
